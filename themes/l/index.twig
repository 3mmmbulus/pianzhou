{% extends 'base.twig' %}
{% block main %}
  {% set page_id = current_page.id|default('') %}
  {% set is_404 = page_id == '404' or (page_id|split('/')|last) == '404' %}
  {% set is_news_index = page_id in ['news', 'news/index'] %}
  {% set is_news_item = page_id|slice(0, 5) == 'news/' and not is_news_index %}

  {% if is_404 %}
    <h1 class="h1">{{ current_page.title|default('404') }}</h1>
    <div class="content">{{ content }}</div>
  {% elseif is_news_index %}
    {% include 'news/index.twig' %}
  {% elseif is_news_item %}
    {% include 'news/item.twig' %}
  {% else %}
    {% if page_id in ['index',''] %}
      {# Unique block (l only): Pricing table section #}
      <section class="pricing" aria-label="方案">
        <div class="price-card"><h3>基础</h3><p class="muted">内容发布</p><div class="price">¥0</div></div>
        <div class="price-card featured"><h3>标准</h3><p class="muted">新闻 + SEO</p><div class="price">¥99</div></div>
        <div class="price-card"><h3>高级</h3><p class="muted">多站点</p><div class="price">¥199</div></div>
      </section>
    {% endif %}
    <h1 class="h1">{{ current_page.title|default(site_title) }}</h1>
    <div class="content">{{ content }}</div>
  {% endif %}
{% endblock %}
